@model Carsale.DAO.Models.Brand
@{
    ViewBag.Title = "Create";
}

<h2>Brand</h2>
@using (Html.BeginForm("Create", "Brand", FormMethod.Post, new { id = "create", @Class = "form-horizontal" }))
{

    <div class="form-group">
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(model => model.Name).ToHtmlString()) })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="col-md-4">
        <button type="submit" class="btn btn-default">Créer ma marque</button>
    </div>
}

