@using Carsale.DAO.Models
@using Carsale.ViewModels
@using Carsale.Extensions

@model CreateAccountViewModel

@{
    ViewBag.Title = "Créer Nouveau Compte";
}

<h2>Nouveau Compte</h2>

@using (Html.BeginForm("Create"))
{
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.TextBoxFor(model => model.Account.FirstName, new { @class = "form-control", placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(model => model.Account.FirstName).ToHtmlString()) })
            @Html.ValidationMessageFor(model => model.Account.FirstName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6">
            @Html.TextBoxFor(model => model.Account.LastName, new { @class = "form-control", placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(model => model.Account.LastName).ToHtmlString()) })
            @Html.ValidationMessageFor(model => model.Account.LastName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.TextBoxFor(model => model.Account.Email, new { @class = "form-control", placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(model => model.Account.Email).ToHtmlString()) })
            @Html.ValidationMessageFor(model => model.Account.Email, (string)ViewBag.EmailError, new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6">
            @Html.DropDownListFor(model => model.Account.Type, (Model.AccountTypes as IEnumerable<AccountType>).Select(e => new SelectListItem() { Text = e.ToString(), Value = e.ToString(), Selected = false }).AsEnumerable().AddFirst(new SelectListItem() { Text = "Type", Value = "", Selected = true, Disabled = true }), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Account.Type, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.PasswordFor(model => model.Account.Password, new { @class = "form-control", placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(model => model.Account.Password).ToHtmlString()) })
            @Html.ValidationMessageFor(model => model.Account.Password, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6">
            @Html.PasswordFor(model => model.RepeatPassword, new { @class = "form-control", placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(model => model.RepeatPassword).ToHtmlString()) })
            @Html.ValidationMessageFor(model => model.RepeatPassword, (string)ViewBag.RepeatPasswordError, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-12">
            <input class="btn btn-primary" type="submit" value="Créer le compte" />
        </div>
    </div>
}