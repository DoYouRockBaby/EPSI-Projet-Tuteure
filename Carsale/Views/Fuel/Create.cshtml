@using Carsale.DAO.Models
@using Carsale.ViewModels
@using Carsale.Extensions

@model CreateFuelViewModel

@{
    ViewBag.Title = "Créer un carburant";
}

<h2>Créer un carburant</h2>

@using (Html.BeginForm("Create", "Fuel", FormMethod.Post, new { id = "create", @Class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="form-row">
        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.Fuel.Reference, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.Fuel.Reference, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Fuel.Reference, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.Fuel.Name, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.Fuel.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Fuel.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-12">
            @Html.DropDownListFor(model => model.SelectedType, (Model.FuelTypes as IEnumerable<FuelType>).Select(e => new SelectListItem() { Text = e.ToString(), Value = e.ToString(), Selected = false }).AsEnumerable().AddFirst(new SelectListItem() { Text = "Type", Value = "", Selected = true, Disabled = true }), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SelectedType, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-12">
            @Html.DropDownListFor(model => model.SelectedFuelWholesaler, (Model.FuelWholesalers as IEnumerable<FuelWholesaler>).Select(e => new SelectListItem() { Text = e.Name, Value = e.Id.ToString(), Selected = false }).AsEnumerable().AddFirst(new SelectListItem() { Text = "Gossiste", Value = "", Selected = true, Disabled = true }), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SelectedFuelWholesaler, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Ajouter" class="btn btn-primary" />
    </div>
}