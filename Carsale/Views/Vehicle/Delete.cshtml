@using Carsale.DAO.Models

@model Vehicle


@{
    ViewBag.Title = "Delete";
   
}

<h2>Véhicule à supprimer</h2>

@using (Html.BeginForm("Delete", "Vehicle", FormMethod.Post, new { id = "delete", @Class = "form-horizontal" }))
{
    <div class="form-row">
        <div class="card-body">

            <div class="form-row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.Matriculation)
                    @Html.TextBoxFor(m => m.Matriculation, new { @class = "form-control", disabled = "disabled" })
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.Price)
                   @Html.TextBoxFor(m => m.Price, new { @class = "form-control", disabled = "disabled" })
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.Power)
                    @Html.TextBoxFor(m => m.Power, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.Model)
                    @Html.TextBoxFor(m => m.Model, new { @class = "form-control", disabled = "disabled" })
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.VehicleColor)
                    @Html.TextBoxFor(m => m.VehicleColor, new { @class = "form-control", disabled = "disabled" })
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.Status)
                    @Html.TextBoxFor(m => m.Status, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>
        </div>
      </div>

            <div class="form-row">
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Delete" />
                </div>
            </div>
        }
